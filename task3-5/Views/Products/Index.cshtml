@model List<Product>
@{
    ViewData["Title"] = "Index";
}

<h1>ViewBg</h1>

@{
    var data = (List<Product>)ViewBag.products;
    for (int i = 0; i < data.Count; i++)
    {
        <p>Id: @data[i].Id</p>
        <p>Price: $@data[i].Price</p>
        <p>Name: @data[i].Name</p>
        <hr>
    }

}

<h1>Layout</h1>

@{
    for (int i = 0; i < Model.Count; i++)
    {
        <p>Id: @Model[i].Id</p>
        <p>Price: $@Model[i].Price</p>
        <p>Name: @Model[i].Name</p>
        <hr>
    }

}